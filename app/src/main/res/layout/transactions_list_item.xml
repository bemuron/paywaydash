<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="?attr/cardBgColor"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    card_view:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="?listPreferredItemPaddingLeft"
        android:paddingStart="?listPreferredItemPaddingLeft"
        android:paddingRight="?listPreferredItemPaddingRight"
        android:paddingEnd="?listPreferredItemPaddingRight"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/trxTypeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_padding_xxlarge"
            android:layout_marginRight="@dimen/margin_padding_xxlarge"
            android:text="Type:"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_xnormal" />

        <TextView
            android:id="@+id/trxTypeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/trxTypeTv"
            android:layout_marginStart="@dimen/margin_padding_xxlarge"
            android:layout_marginLeft="@dimen/margin_padding_xxlarge"
            android:layout_toEndOf="@id/trxTypeTv"
            android:layout_toRightOf="@id/trxTypeTv"
            android:textStyle="bold"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_xnormal" />

        <TextView
            android:id="@+id/trxServiceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trxTypeTv"
            android:layout_marginTop="@dimen/margin_padding_xlarge"
            android:text="Service:"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_xnormal" />

        <TextView
            android:id="@+id/trxServiceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trxTypeValue"
            android:layout_alignStart="@id/trxTypeValue"
            android:layout_alignLeft="@id/trxTypeValue"
            android:layout_alignBaseline="@id/trxServiceTv"
            android:layout_marginTop="@dimen/margin_padding_xlarge"
            android:textStyle="bold"
            android:layout_toEndOf="@id/trxTypeValue"
            android:layout_toRightOf="@id/trxTypeValue"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_xnormal" />

        <TextView
            android:id="@+id/trxCategoryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trxServiceTv"
            android:layout_marginTop="@dimen/margin_padding_xlarge"
            android:text="Category:"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_xnormal" />

        <TextView
            android:id="@+id/trxCategoryValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trxServiceValue"
            android:layout_alignStart="@id/trxServiceValue"
            android:layout_alignLeft="@id/trxServiceValue"
            android:layout_alignBaseline="@id/trxCategoryTv"
            android:layout_marginTop="@dimen/margin_padding_xlarge"
            android:layout_toEndOf="@id/trxServiceValue"
            android:layout_toRightOf="@id/trxServiceValue"
            android:textStyle="bold"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_xnormal" />

        <TextView
            android:id="@+id/trxDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trxCategoryTv"
            android:layout_marginLeft="@dimen/margin_padding_large"
            android:layout_marginTop="@dimen/margin_padding_xlarge"
            android:layout_marginEnd="@dimen/margin_padding_large"
            android:layout_marginRight="@dimen/margin_padding_large"
            android:text="Date:"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_xnormal"/>

        <TextView
            android:id="@+id/trxDateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trxCategoryValue"
            android:layout_alignBaseline="@id/trxDateTv"
            android:layout_alignStart="@id/trxCategoryValue"
            android:layout_alignLeft="@id/trxCategoryValue"
            android:layout_toEndOf="@id/trxDateTv"
            android:layout_toRightOf="@id/trxDateTv"
            android:textStyle="bold"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_xnormal" />

        <TextView
            android:id="@+id/trxAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trxDateTv"
            android:layout_marginLeft="@dimen/margin_padding_large"
            android:layout_marginTop="@dimen/margin_padding_xlarge"
            android:layout_marginEnd="@dimen/margin_padding_large"
            android:layout_marginRight="@dimen/margin_padding_large"
            android:text="Amount:"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_xnormal" />

        <TextView
            android:id="@+id/trxAmountValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trxDateValue"
            android:layout_alignBaseline="@id/trxAmountTv"
            android:layout_alignStart="@id/trxDateValue"
            android:layout_alignLeft="@id/trxDateValue"
            android:layout_toEndOf="@id/trxAmountTv"
            android:layout_toRightOf="@id/trxAmountTv"
            android:text="UGX.55,000"
            android:textStyle="bold"
            android:textColor="@color/sky_blue"
            android:textSize="@dimen/text_size_xnormal" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>